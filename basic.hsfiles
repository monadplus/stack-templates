module Main (main) where

import System.FilePath.Glob (glob)
import Test.DocTest         (doctest)

main :: IO ()
main = do
    sourceFiles <- glob "src/**/*.hs"
    doctest
        $ "-XAllowAmbiguousTypes"
        : "-XBangPatterns"
        : "-XConstraintKinds"
        : "-XDataKinds"
        : "-XDefaultSignatures"
        : "-XDeriveAnyClass"
        : "-XDeriveDataTypeable"
        : "-XDeriveFoldable"
        : "-XDeriveFunctor"
