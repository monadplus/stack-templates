        : "-XEmptyDataDecls"
        : "-XFlexibleContexts"
        : "-XFlexibleInstances"
        : "-XFunctionalDependencies"
        : "-XGADTs"
        : "-XGeneralizedNewtypeDeriving"
        : "-XInstanceSigs"
